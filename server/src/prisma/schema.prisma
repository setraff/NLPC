generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  auth0UserId Int
  name String?
  events Event[]
}

model Event {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId Int
  repeatRule RepeatRule?
  name String
  startDate DateTime
  color String
  endDate DateTime
}

model RepeatRule {
  id Int @id @default(autoincrement())
  event Event @relation(fields: [eventId], references: [id])
  eventId Int @unique
  frequency Frequency
  interval Int
  weekday WeekDay
  dayOfMonth Int
  month Month
  endDate DateTime?
}

enum Frequency {
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
}

enum WeekDay {
    SUNDAY
    MONDAY
    TUESDAY
    WEDNESDAY
    THURSDAY
    FRIDAY
}

enum Month {
    JANUARY
    FEBRUARY
    MARCH
    APRIL
    MAY
    JUNE
    JULY
    AUGUST
    SEPTEMBER
    OCTOBER
    NOVEMBER
    DECEMBER
}